{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "futureverse:alien_mob",
      "is_spawnable": true,
      "is_summonable": true
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "futureverse",
          "futureverse_hostile",
          "alien"
        ]
      },
      "minecraft:scale": 1.2,
      "minecraft:health": {
        "value": 60,
        "max": 60
      },
      "minecraft:movement": {
        "value": 0.28
      },
      "minecraft:attack": {
        "damage": 9
      },
      "minecraft:knockback_resistance": {
        "value": 0.4
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 1,
        "attack_interval": 20,
        "must_see": true,
        "within_radius": 20,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 32
          }
        ]
      },
      "minecraft:behavior.melee_attack": {
        "priority": 2,
        "speed_multiplier": 1.1,
        "track_target": true
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5,
        "speed_multiplier": 0.6
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "look_distance": 20
      },
      "minecraft:fire_immune": {},
      "minecraft:loot": {
        "table": "loot_tables/entities/alien_mob.json"
      },
      "minecraft:on_death": {
        "event": "futureverse:on_death"
      },
      "minecraft:on_hurt": {
        "event": "futureverse:on_hurt"
      }
    },
    "events": {
      "futureverse:on_death": {
        "run_command": {
          "command": [
            "scoreboard players add @p[r=32] alien_kills 1",
            "playsound futureverse.alien.alert @p[r=32] ~ ~ ~ 1 0.9",
            "particle minecraft:explosion ~ ~1 ~ 0.2 0.2 0.2 0 12 force"
          ]
        }
      },
      "futureverse:on_hurt": {
        "run_command": {
          "command": [
            "effect @p[r=6] nausea 4 0 true"
          ]
        }
      }
    }
  }
}
